<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".Login_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

        <ImageView
            android:id="@+id/logIn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/previous_page"
            android:src="@drawable/ic_back"
            android:padding="5dp"
            android:backgroundTint="#9C000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/LogIn_tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_black"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Sign Up"
            android:textColor="#9C000000"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/LogIn_tv_logIn_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Log In"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/LogIn_tv_logIn_large"
            tools:layout_editor_absoluteX="30dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/LogIn_cv_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:padding="10dp"
                        android:src="@drawable/google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/avenir_black"
                        android:paddingRight="12dp"
                        android:text="with Google"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/LogIn_iv_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/signup_icon_bg"
                android:padding="10dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/LogIn_iv_twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/signup_icon_bg"
                android:padding="10dp"
                android:src="@drawable/twitter" />

        </LinearLayout>

        <TextView
            android:id="@+id/LogIn_textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="Or with Email"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="30dp" />

        <EditText
            android:id="@+id/LogIn_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_background"
            android:drawableEnd="@drawable/ic_outline_email_24"
            android:hint="Email"
            android:textColorHint="#A804040B"
            android:textColor="@color/black"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LogIn_textView3" />

        <EditText
            android:id="@+id/LogIn_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_background"
            android:drawableRight="@drawable/ic_round_remove_red_eye_24"
            android:hint="Password"
            android:textColor="@color/black"
            android:inputType="text"
            android:textColorHint="#A804040B"
            android:padding="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LogIn_et_email" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/LogIn_btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="@color/teal_700"
            android:padding="18dp"
            android:text="done"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.297"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LogIn_et_password" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Â© 2023 Touristo"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/LogIn_btn_done"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>